{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "build",
    "lib": ["es2020", "dom"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true
  },
  "include": ["src/**/*"]
}